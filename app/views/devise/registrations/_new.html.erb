<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div>
  	<%= f.text_field :fname, placeholder: "First Name" %>
  </div>
<br/>
  <div>
	<%= f.text_field :lname, placeholder: "Last Name" %>
  </div>
</br>
  <div>
  	<%= f.email_field :email, placeholder: "Email", autofocus: true %>
  </div>
</br>
  <div>
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
  </div>
</br>
  <div>
    <%= f.password_field :password_confirmation, placeholder: "Re-type Password", autocomplete: "off" %>
  </div>
</br>
  <div><%= f.submit "Sign up" %></div>
<% end %>

